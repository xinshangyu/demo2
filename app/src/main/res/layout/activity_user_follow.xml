<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center">

        <com.flyco.tablayout.CommonTabLayout
            android:layout_gravity="center"
            android:id="@+id/home_tabLayout"
            android:layout_width="200dp"
            android:layout_height="48dp"
            app:tl_textSelectColor="#6988F8"
            app:tl_textUnselectColor="#333333"
            app:tl_indicator_width="45dp"
            android:paddingBottom="7dp"
            app:tl_underline_color="@null"
            app:tl_underline_height="1dp"
            app:tl_indicator_color="#6988F8"
            app:tl_textsize="@dimen/text_19sp" />


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/black_back" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shape_color_text_background_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_NoScrollViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>