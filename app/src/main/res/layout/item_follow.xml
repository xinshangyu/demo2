<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/defaulthead" />

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="right|bottom"
                android:src="@mipmap/qiye_vip1"
                android:visibility="visible" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack0"
                    android:textSize="@dimen/text_18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack9"
                    android:textSize="@dimen/text_15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-1221-1212"
                    android:textColor="@color/colorBlack9"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_r"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_follow" />
    </LinearLayout>
    <Spinner
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorBackGround_F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>